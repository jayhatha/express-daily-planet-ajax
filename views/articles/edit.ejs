<h1>Edit Article</h1>

<form action="/articles/<%= article.id %>" method="POST" role="form" class="update">

  <div class="form-group">
    <label for="title" class="hidden">Title</label>
    <input type="text" class="form-control" id="title" placeholder="<%= article.title %>" name="title">
  </div>

  <div class="form-group">
    <label for="body" class="hidden">Body</label>
    <textarea type="text" class="form-control" id="body" placeholder="<%= article.body %>" name="body"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Edit</button>
</form>
